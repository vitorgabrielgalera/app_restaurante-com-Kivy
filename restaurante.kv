#:kivy 2.3.0

#sem transição
#:import NoTransition kivy.uix.screenmanager.NoTransition

#uma tela vai para o fundo, a outra vem pelo lado
#:import SwapTransition kivy.uix.screenmanager.SwapTransition

#uma tela vai perdendo opacidade enquanto a outra ganha
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Label>:
    color: 1, 1, 1, 1
    font_size: 20
    halign: "center"
    valign: "middle"

GerenciadorTelas:
    transition: NoTransition()
    TelaPrincipal:
    TelaGarcom:
    TelaCozinha:  
    TelaCaixa:

<TelaPrincipal>:

    name: 'tela_principal'
    GridLayout:

        size_hint: 1,1
        cols: 1
        spacing: 2
        padding: 6
    
        Label:
            text: "Olá, seja bem vindo ao nosso super mega melhor de bão de tudo app!"
            text_size: self.size
    
        Button:
            text: 'Garçom'
            on_release:
                app.root.current = 'tela_garcom'
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0

        Button:
            text: 'Cozinha'
            on_release:
                app.root.current = 'tela_cozinha'
                root.manager.transition.direction = 'up'
                root.manager.transition.duration = 0

        Button:
            text: 'Caixa'
            on_release:
                app.root.current = 'tela_caixa'
                root.manager.transition.direction = 'rigth'
                root.manager.transition.duration = 0

###################################################################

<TelaGarcom>:

    name: 'tela_garcom'
    GridLayout:
        cols: 1
        spacing: 2
        padding: 6

        Label:
            text: "Garçom"

        TextInput:
            hint_text: 'Mesa'
            
        TextInput:
            hint_text: 'Pedido'
    
        Button:
            text: "Enviar"
    
        Button:
            text: "Voltar"
            on_release:
                app.root.current = 'tela_principal'
                root.manager.transition.direction = 'right'
                root.manager.transition.duration = 0

###################################################################

<TelaCozinha>:

    name: 'tela_cozinha'
    GridLayout:
        cols: 1
        spacing: 2
        padding: 6

        SecondCozinha:
            
        TextInput:
            hint_text: 'sem pedidos'

        Button:
            text: "Voltar"
            on_release:
                app.root.current = 'tela_principal'
                root.manager.transition.direction = 'down'
                root.manager.transition.duration = 0

<SecondCozinha@GridLayout>:
    cols: 1
    spacing: 2
    padding: 6

    Label:
        text: "Cozinha"
    Label:
        text: 'Pedidos:'

###################################################################

<TelaCaixa>:

    name: 'tela_caixa'
    GridLayout:
        cols: 1
        spacing: 2
        padding: 6

        Label:
            text: "Caixa"

        TextInput:
            hint_text: 'mesa'
            
        TextInput:
            hint_text: 'sem pedido'

        Button:
            text: "Voltar"
            on_release:
                app.root.current = 'tela_principal'
                root.manager.transition.direction = 'left'
                root.manager.transition.duration = 0