#:kivy 2.3.0

#crio o elemento visual da bolinha
<PongBall>:
    #defino o tamanho da bolinha
    size: 50, 50
    canvas:
        Ellipse:
            #aplico a posição na bolinha
            pos: self.pos
            #aplico o tamanho da bolinha
            size: self.size


<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

#crio o widget principal
<PongGame>:  
    ball: pong_ball
    player1: player_left
    player2: player_right

    #crio os widgets que irão conter os elementos visuais  
    canvas:
        #crio o retângulo que indicará o meio da tela
        Rectangle:
            #posicio o retângulo
            pos: self.center_x - 5, 0

            #defino o tamanho do retângulo
            size: 10, self.height
    #crio as pontuações de ambos os jogadores
    Label:
        #crio uma entrada de texto para armazenar a pontuação
        font_size: 70  

        #posiciono a entrada de texto
        center_x: root.width / 4
        top: root.top - 50

        #defino o texto a ser exibido
        text: str(root.player1.score)
        
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    #mostro a bolinha
    PongBall:
        # conecta a bolinha do main
        id: pong_ball
        #posiciono a bolinha
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y


